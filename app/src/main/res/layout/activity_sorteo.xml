    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".sorteo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_sort">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="372dp"
            android:layout_height="78dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="23dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <EditText
                android:id="@+id/etMatricula"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/fondo_edditext"
                android:drawableStart="@drawable/matricula"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Matricula"
                android:textColor="#8C8A8A" />

            <EditText
                android:id="@+id/etLiberacion"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/fondo_edditext"
                android:drawableStart="@drawable/numeric"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Num-LiberaciÃ³n"
                android:textColor="#8C8A8A" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="161dp"
            android:layout_height="161dp"
            android:layout_marginStart="125dp"
            android:layout_marginEnd="125dp"
            android:background="#355000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:srcCompat="@drawable/helmet__1_" />

        <TableLayout
