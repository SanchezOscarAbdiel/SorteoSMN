<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSubtituloe"
        android:layout_width="242dp"
        android:layout_height="34dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        android:text="Actualiza tus datos:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloEnc" />

    <TextView
        android:id="@+id/tvSubtituloe2"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginStart="45dp"
        android:text="°Altura (mts)"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtituloe4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtituloe3" />

    <TextView
        android:id="@+id/tvSubtituloe4"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="°Tipo de sangre"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtituloe2" />

    <TextView
        android:id="@+id/tvSubtituloe3"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="70dp"
        android:text="°Peso (kg)"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtituloe2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTituloEnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="14dp"
        android:text="INFORMACION IMPORTANTE"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtituloe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPesoEnc"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Peso"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtituloe2"
        app:layout_constraintStart_toEndOf="@+id/tvSubtituloe3"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtituloe"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/etAlturaEnc"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Altura"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/tvSubtituloe2"
        app:layout_constraintTop_toBottomOf="@+id/etPesoEnc" />

    <Button
        android:id="@+id/btAceptaEnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="246dp"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/etAlturaEnc"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/etSangre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:hint="O+,O-,A+,A-, etc..."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtituloe4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtituloe2"
        app:layout_constraintVertical_bias="0.412" />


</androidx.constraintlayout.widget.ConstraintLayout>